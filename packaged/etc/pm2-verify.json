{
        "apps": [{
                "name": "lisk.verify",
                "script": "app.js",
                "cwd": ".",
                "pid_file": "./pids/lisk.verify.pid",
                "out_file": "./logs/lisk.verify.log",
                "error_file": "./logs/lisk.verify.err",
                "log_date_format": "YYYY-MM-DD HH:mm:ss SSS",
                "autorestart": false,
                "watch": false,
                "kill_timeout" : 10000,
                "max_memory_restart": "2048M",
                "node_args": "--max_old_space_size=2048",
                "args": "-c verify.json"
        }]
}
